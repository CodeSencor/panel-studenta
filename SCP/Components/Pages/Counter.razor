@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<label for="increment">The amount to increment:</label>
<input id="increment" type="number" @oninput="OnIncrementChange"/>
<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;
    private int incrementAmt = 0;

    private void IncrementCount()
    {
        currentCount += incrementAmt;
    }

    private void OnIncrementChange(ChangeEventArgs e)
    {
        if (e.Value is string value && int.TryParse(value, out int intVal))
        {
            incrementAmt = intVal;
        }
    }
    
}